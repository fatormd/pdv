// Arquivo: firestore.rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- BLOCO PRINCIPAL DE DADOS ---
    match /artifacts/{appId}/public/data {

      // --- REGRA "VOUCHERS" ---
      match /vouchers/{voucherId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider != 'anonymous' &&
                       get(/databases/$(database)/documents/artifacts/$(appId)/public/data/users/$(request.auth.token.email)).data.role == 'gerente';
      }

      // --- REGRA "QUICK_OBS" ---
      match /quick_obs/{obsId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider != 'anonymous';
      }

      // --- REGRA "USERS" (STAFF) ---
      match /users/{userId} {
        allow read: if request.auth != null &&
                       request.auth.token.firebase.sign_in_provider != 'anonymous';
        // Escrita bloqueada para segurança (usar Cloud Functions ou Admin)
        allow write: if false;
      }

      // --- REGRA "TABLES" (CORREÇÃO DEFINITIVA) ---
      match /tables/{tableId} {
        // 1. Staff tem acesso total (Ler e Escrever)
        allow read, write: if request.auth != null && 
                            request.auth.token.firebase.sign_in_provider != 'anonymous';
                            
        // 2. Clientes (Anônimos) podem LER a mesa
        allow read: if request.auth != null && 
                      request.auth.token.firebase.sign_in_provider == 'anonymous';

        // 3. Clientes (Anônimos) podem CRIAR uma mesa (Auto-abertura)
        allow create: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider == 'anonymous';

        // 4. Clientes podem ATUALIZAR campos (LISTA COMPLETA DE CAMPOS PERMITIDOS)
        // Mudamos de .diff() para .keys().subsetOf(). Isso valida o documento INTEIRO final.
        // Se o documento final tiver qualquer campo fora desta lista, o Firebase bloqueia.
        allow update: if request.auth != null &&
                      request.auth.token.firebase.sign_in_provider == 'anonymous' &&
                      request.resource.data.keys().subsetOf([
                        // Identificação da Mesa e Status
                        'tableNumber', 'status', 'diners', 'sector', 'createdAt', 'total', 
                        
                        // Identificação do Cliente
                        'clientId', 'clientName', 'clientPhone', 'anonymousUid', 'clientDocType',
                        
                        // Pedidos e Itens
                        'selectedItems', 'requestedOrders', 'sentItems', 
                        
                        // Notificações e Financeiro
                        'clientOrderPending', 'waiterNotification', 'billRequested', 
                        'payments', 'serviceTaxApplied', 
                        
                        // Campos de Sistema/Legado (Importantes para não quebrar a validação)
                        'accessPin', 'lastKdsSentAt', 'masterTable', 'mergedTables', 'waiterId'
                      ]);
      }
      
      // --- REGRA "CUSTOMERS" ---
      match /customers/{customerId} {
        // Staff tem acesso total
        allow read, write: if request.auth != null &&
                           request.auth.token.firebase.sign_in_provider != 'anonymous';
        
        // Cliente pode criar/ler/atualizar seu próprio registro
        allow read, write: if request.auth != null &&
                      request.auth.uid == customerId;
      }
      
      // --- REGRA "KDS" ---
      match /kds_orders/{orderId} {
        allow read, write: if request.auth != null &&
                           request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // --- REGRA DE BLOQUEIO PADRÃO ---
      match /{document=**} {
        allow read, write: if false;
      }
    }
  }
}