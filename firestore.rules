// Arquivo: firestore.rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /artifacts/{appId}/public/data {

      // --- REGRA "VOUCHERS" ---
      match /vouchers/{voucherId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider != 'anonymous' &&
                       get(/databases/$(database)/documents/artifacts/$(appId)/public/data/users/$(request.auth.token.email)).data.role == 'gerente';
      }

      // --- REGRA "QUICK_OBS" ---
      match /quick_obs/{obsId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider != 'anonymous';
      }

      // --- REGRA "USERS" ---
      match /users/{userId} {
        allow read: if request.auth != null &&
                       request.auth.token.firebase.sign_in_provider != 'anonymous';
        allow write: if false;
      }

      // --- REGRA "TABLES" (CORRIGIDA E ROBUSTA) ---
      match /tables/{tableId} {
        // 1. Staff tem acesso total
        allow read, write: if request.auth != null && 
                            request.auth.token.firebase.sign_in_provider != 'anonymous';
                            
        // 2. Clientes (Anônimos) podem LER a mesa
        allow read: if request.auth != null && 
                      request.auth.token.firebase.sign_in_provider == 'anonymous';

        // 3. Clientes (Anônimos) podem CRIAR uma mesa (Auto-abertura)
        allow create: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider == 'anonymous';

        // 4. Clientes podem ATUALIZAR campos específicos
        // Usamos diff().affectedKeys() para validar APENAS o que está mudando
        allow update: if request.auth != null &&
                      request.auth.token.firebase.sign_in_provider == 'anonymous' &&
                      request.resource.data.diff(resource.data).affectedKeys().subsetOf([
                        // Dados de identificação do cliente
                        'clientId', 'clientName', 'clientPhone', 'anonymousUid', 
                        // Dados básicos da mesa
                        'status', 'diners', 
                        // Campos de pedidos e solicitações
                        'requestedOrders', 'clientOrderPending', 'waiterNotification', 
                        'billRequested', 'selectedItems'
                      ]);
      }
      
      // --- REGRA "CUSTOMERS" ---
      match /customers/{customerId} {
        allow read, write: if request.auth != null &&
                           request.auth.token.firebase.sign_in_provider != 'anonymous';
        allow read, write: if request.auth != null &&
                      request.auth.uid == customerId;
      }
      
      // --- REGRA "KDS" ---
      match /kds_orders/{orderId} {
        allow read, write: if request.auth != null &&
                           request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      match /{document=**} {
        allow read, write: if false;
      }
    }
  }
}